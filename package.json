{
  "name": "movie-mondays",
  "version": "1.0.0",
  "description": "",
  "main": "src/index.ts",
  "scripts": {
    "build": "tsc",
    "start": "node --inspect=5858 -r ts-node/register . localhost 8080",
    "start:watch": "nodemon",
    "test": "jest --watchAll"
  },
  "dependencies": {
    "@types/jest": "24.0.18",
    "@types/jsdom": "12.2.4",
    "@types/node": "12.7.5",
    "@types/node-fetch": "2.5.0",
    "jest": "latest",
    "jsdom": "15.1.1",
    "node-fetch": "2.6.0",
    "ts-jest": "24.0.2",
    "ts-node": "latest",
    "typescript": "3.6.3"
  },
  "devDependencies": {
    "nodemon": "1.18.4"
  },
  "keywords": [],
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm start",
    "ext": "ts"
  }
}
